{
  "name": "dms-firebase-firestore",
  "version": "1.0.0",
  "description": "Multi-module enterprise application with Firebase Firestore",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:cloud-build": "gcloud builds submit --config cloudbuild.yaml",
    "deploy:cloud-build:ps1": "powershell -ExecutionPolicy Bypass -File deploy-cloud-build.ps1",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File deploy-all.ps1",
    "deploy:frontend": "cd frontend && npm run build && cd .. && firebase deploy --only hosting --project dhananjaygroup-dms",
    "fix:build-permissions": "powershell -ExecutionPolicy Bypass -File diagnose-build-issue.ps1",
    "test:build": "powershell -ExecutionPolicy Bypass -File test-build-submit.ps1",
    "check:billing": "powershell -ExecutionPolicy Bypass -File check-billing.ps1",
    "deep-diagnose": "powershell -ExecutionPolicy Bypass -File deep-diagnose.ps1",
    "setup:git": "powershell -ExecutionPolicy Bypass -File setup-git.ps1",
    "setup:github": "powershell -ExecutionPolicy Bypass -File setup-github-simple.ps1",
    "create-admin": "ts-node scripts/create-admin-user.ts",
    "create-firestore-user": "ts-node scripts/create-firestore-user.ts",
    "verify-setup": "ts-node scripts/verify-setup.ts",
    "test-api": "ts-node scripts/test-api.ts"
  },
  "keywords": [
    "firebase",
    "firestore",
    "enterprise",
    "multi-module"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
